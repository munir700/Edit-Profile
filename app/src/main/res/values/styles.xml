<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginBottom">@dimen/textinputlayout_input_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/textinput_layout_input_margin</item>
        <item name="android:layout_marginRight">@dimen/textinput_layout_input_margin</item>
    </style>

    <style name="LableTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>


    <style name="RoundedButton" parent="Theme.AppCompat">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:paddingTop">@dimen/roundedbutton_top_padding</item>
        <item name="android:paddingBottom">@dimen/roundedbutton_bottom_padding</item>
        <item name="android:paddingRight">@dimen/roundedbutton_right_padding</item>
        <item name="android:paddingLeft">@dimen/roundedbutton_left_padding</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="EditTextHintTheme">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/border_color</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
